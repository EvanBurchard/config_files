" Colors for MacVim
set bg=dark
" colors slate
highlight Normal  guibg=Black   guifg=White
highlight PreProc guibg=Black
highlight NonText guibg=#060606
highlight Folded  guibg=#0A0A0A guifg=#9090D0

" Window size
set lines=57
set columns=105

" Font
set guifont=Monaco:h12.50

" No audible bell
set vb

" Colors for autocomplete
highlight Pmenu    guibg=#202040 guifg=Gray
highlight Pmenusel guibg=#4040D0 guifg=White

" Syntax colors
highlight String  guifg=DarkGray
" highlight Comment guifg=#000066

